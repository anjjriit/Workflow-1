{
    "name": "cerbero/workflow",
    "type": "library",
    "description": "Create extendible and maintainable applications by harnessing the power of pipelines.",
    "keywords": [
        "laravel",
        "hub",
        "pipeline",
        "bus",
        "dispatcher"
    ],
    "require": {
        "php": ">=5.5.0",
        "illuminate/support": "~5.0",
        "illuminate/contracts": "~5.0",
        "illuminate/console": "~5.0",
        "illuminate/filesystem": "~5.0",
        "symfony/yaml": ">=2.6,<3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1",
        "henrikbjorn/phpspec-code-coverage" : "^2.0",
        "scrutinizer/ocular": "^1.1",
        "squizlabs/php_codesniffer": "^2.3",
        "codeception/codeception": "~2.0",
        "janhenkgerritsen/codeception-laravel5": "~1.0"
    },
    "homepage": "https://github.com/cerbero90/Workflow",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Marco Sartori",
            "email": "andrea.marco.sartori@gmail.com",
            "homepage": "https://github.com/cerbero90",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cerbero\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\Workflow\\": "tests"
        }
    },
    "scripts": {
        "test": "phpspec run -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
